{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@storybook-test/common/ui-progress-meter": [
        "libs/common/ui-progress-meter/src/index.ts"
      ],
      "@storybook-test/common/ui-image-radio-buttons": [
        "libs/common/ui-image-radio-buttons/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
